        <CheckBox x:Name="show2" Content="Do not show this until the next boot" HorizontalAlignment="Left" Margin="21,229,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Segoe UI Semibold" Width="261"/>

    </Grid>
