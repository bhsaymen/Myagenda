            <Calendar.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFE4EAF0" Offset="0"/>
                    <GradientStop Color="#FFECF0F4" Offset="0.16"/>
                    <GradientStop Color="#FFFCFCFD" Offset="0.16"/>
                    <GradientStop Color="#FF3DF115" Offset="1"/>
                </LinearGradientBrush>
            </Calendar.Background>
        </Calendar>
        <Button Content="Save" Height="55" HorizontalAlignment="Left" Margin="194,434,0,0" x:Name="Add" VerticalAlignment="Top" Width="75" Click="Add_Click"   />
        <Button Content="Manage tasks" Height="58" HorizontalAlignment="Left" Margin="390,36,0,0" x:Name="show" VerticalAlignment="Top" Width="90" Click="show_Click"/>
        <RadioButton Content="Entertainment" Height="16" HorizontalAlignment="Left" Margin="352,383,0,0" x:Name="radioButton1" VerticalAlignment="Top" />
        <RadioButton Content="Business" Height="16" HorizontalAlignment="Left" Margin="352,405,0,0" x:Name="radioButton2" VerticalAlignment="Top" />
        <RadioButton Content="Other" Height="16" HorizontalAlignment="Left" Margin="352,427,0,0" x:Name="radioButton3" VerticalAlignment="Top" IsChecked="True" />
        <Label Content="Task " Height="28" HorizontalAlignment="Left" Margin="214,230,0,0" x:Name="label6" VerticalAlignment="Top" />
        <Label Content="Description" Height="28" HorizontalAlignment="Left" Margin="210,288,0,0" x:Name="label4" VerticalAlignment="Top" />
        <TextBox Height="24" HorizontalAlignment="Left" Margin="286,164,0,0" x:Name="dater" VerticalAlignment="Top" Width="158" IsReadOnly="True" Background="#FFF7C275" />
        <Label Content="Date" Height="28" HorizontalAlignment="Left" Margin="218,164,0,0" x:Name="label10" VerticalAlignment="Top" />
        <TextBox Height="35" HorizontalAlignment="Left" Margin="278,292,0,-7" x:Name="descriptionText" VerticalAlignment="Top" Width="166" />
        <Button Content="Recover" HorizontalAlignment="Left" Margin="555,114,-128,0" VerticalAlignment="Top" Width="90" Height="47" Click="Button_Click_2" />
        <Label Content="Priority" Height="28" HorizontalAlignment="Left" Margin="218,351,0,0" x:Name="label4_Copy" VerticalAlignment="Top" />
        <TextBox x:Name="prty" HorizontalAlignment="Left" Height="23" Margin="278,356,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="51"/>

    </Grid>
</Window>
