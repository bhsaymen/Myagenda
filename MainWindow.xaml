        <Label Content="Close time" Height="28" HorizontalAlignment="Left" Margin="16,61,0,0" x:Name="label2" VerticalAlignment="Top" />
        <Label Content="Elapsed time" Height="28" HorizontalAlignment="Left" Margin="16,95,0,0" x:Name="label3" VerticalAlignment="Top" />
        <Label Content="Open " Height="28" HorizontalAlignment="Left" Margin="90,35,0,0" x:Name="Open" VerticalAlignment="Top"  Foreground="#FFF21F1F" MouseDoubleClick="Open_MouseDoubleClick" />
        <Label Content="Close" Height="28" HorizontalAlignment="Left" Margin="90,61,0,0" x:Name="Close" VerticalAlignment="Top" />
        <Label Content="Elapsed" Height="28" HorizontalAlignment="Left" Margin="104,95,0,0" x:Name="Elapsed" VerticalAlignment="Top" />
